<div class="row justify-content-center pt-5">
    <div class="col-8 border-bottom border-danger h2">
        Search Results
    </div>
</div>

<div class="row justify-content-center pt-3">
    <div class="col-8 h3">
        Search Results For: <%= searchWord %>
    </div>
</div>

<div class="row justify-content-center pt-3 h3">
    <div class="col-2">
        Part Number
    </div>
    <div class="col-5">
        Description
    </div>
</div>

<% docs.forEach(function(doc) { %>
    <div class="row justify-content-center pt-3">
        <div class="col-2 py-2 searchSelectionBg">
            <form action="/results" method='POST'> 
                <input type="hidden" name = "id" value = "<%=doc.id %>">
                <button type='submit' class="btn searchSelectionButton p-2"><%= doc.model_number.toUpperCase() %></button>
            </form>
        </div>
        <div class="col-5 py-3 searchSelectionBg">
            <%= doc.description %>
        </div>  
    </div>
<% }); %>
